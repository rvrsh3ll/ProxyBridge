<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ProxyBridge.GUI.ViewModels"
        x:Class="ProxyBridge.GUI.Views.AboutWindow"
        x:DataType="vm:AboutViewModel"
        x:CompileBindings="True"
        Title="About ProxyBridge"
        Icon="/Assets/logo.ico"
        Width="500" Height="400"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Background="#FF1E1E1E">

    <Design.DataContext>
        <vm:AboutViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF252526" BorderBrush="#FF007ACC" BorderThickness="0,0,0,1" Padding="20,16">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="â„¹" FontSize="24" Foreground="#FF007ACC" VerticalAlignment="Center"/>
                <TextBlock Text="About ProxyBridge"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="32,24" Spacing="16">
            <TextBlock Text="ProxyBridge"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="#FF007ACC"/>

            <TextBlock Text="{Binding Version}"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Foreground="#FFB0B0B0"/>

            <TextBlock Text="Universal proxy client for Windows applications"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Foreground="#FFB0B0B0"
                       TextWrapping="Wrap"
                       Margin="0,0,0,8"/>


            <TextBlock Text="Author: Sourav Kalal / InterceptSuite"
                       FontSize="13"
                       HorizontalAlignment="Center"
                       Foreground="#FFB0B0B0"
                       Margin="0,4,0,0"/>

            <!-- Clickable Links -->
            <StackPanel Spacing="12">
                <TextBlock HorizontalAlignment="Center">
                    <Run Text="Website: " Foreground="#FFB0B0B0"/>
                    <TextBlock Text="interceptsuite.com"
                               Foreground="#FF007ACC"
                               TextDecorations="Underline"
                               Cursor="Hand"
                               PointerPressed="OnWebsiteClick"/>
                </TextBlock>

                <TextBlock HorizontalAlignment="Center">
                    <Run Text="GitHub: " Foreground="#FFB0B0B0"/>
                    <TextBlock Text="github.com/InterceptSuite/ProxyBridge"
                               Foreground="#FF007ACC"
                               TextDecorations="Underline"
                               Cursor="Hand"
                               PointerPressed="OnGitHubClick"/>
                </TextBlock>
            </StackPanel>

            <TextBlock Text="License: MIT"
                       FontSize="13"
                       HorizontalAlignment="Center"
                       Foreground="#FFB0B0B0"
                       Margin="0,8,0,0"/>

        </StackPanel>
    </Grid>
</Window>
